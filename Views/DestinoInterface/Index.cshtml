@model IEnumerable<RecodeAir.Models.Destino>

@{
    ViewData["Title"] = "Index";
}

<link rel="StyleSheet" href="~/css/destino.css" />

<main>
    <h1 id="titDestino">Os melhores destinos para sua viagem!</h1>




    <div class="container maior p-5">
        @{
            foreach (var item in Model)
            {
                <div class="container bg-light caixinha p-5 row">
                    <div class="col">
                        <img src="~/lib/Imagens/@item.Imagem" />
                    </div>
                    <div class="col">
                        <h2>@item.NomeDestino</h2>
                        <p>@item.Descricao</p>
                    </div>
                    <div class="col preco">
                        <p id="preco">@item.Preco</p>
                        <button id="btnComprar">Comprar</button>

                    </div>
                </div>
            }
        }
    </div>
</main>